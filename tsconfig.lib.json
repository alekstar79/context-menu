{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/**/*.d.ts"],
  "exclude": [
    "src/__tests__",
    "src/**/*.test.ts",
    "src/main.ts",
    "src/App.vue",
    "src/demo/**/*"
  ]
}
